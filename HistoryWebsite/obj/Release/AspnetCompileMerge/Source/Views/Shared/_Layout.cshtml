<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tempestuous Tudors</title>
    
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/favicon.ico" rel="icon" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="banner"><h1>Tempestuous Tudors</h1></div>
    <div class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav text-effects">
                    <li class="active">@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Quizzes", "Index", "Quiz")</li>
                    <li>@Html.ActionLink("Biographies","Index","Biographies")</li>
                    <li>@Html.ActionLink("Entertainment", "Index", "Entertainment")</li> 
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
       
    </div>
        <footer>
                <div id="footerText">
                    <p>&copy; @DateTime.Now.Year - Louise McDonald.  Disclaimer - This is a demonstration website and makes no claims to historical accuracy or insightful personality quizzes.</p>
                </div>
        </footer>
    

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>